<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.MyProfileFragment"
    android:padding="7dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/your_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/userphoto"/>

        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nexusing"
            android:layout_below="@+id/your_pic"
            android:padding="5dp"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/joindate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join Date"
            android:layout_below="@+id/account_name"
            android:padding="5dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of likes"
            android:layout_below="@+id/joindate"
            android:padding="5dp"/>
        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of items sold"
            android:layout_below="@+id/t3"
            android:padding="5dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/editPofile"
            android:id="@+id/logoutButton"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:layout_alignParentBottom="true"
            android:id="@+id/editPofile"/>

    </RelativeLayout>


</FrameLayout>